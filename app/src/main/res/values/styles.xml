<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SwitchStyle" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/end_color</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/gray_dark
        </item>
    </style>
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/color_121C2D</item>
        <item name="android:titleTextColor">@color/color_121C2D</item>
    </style>

    <style name="TextAppearance.RobotoRegular" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextAppearance.RobotoMedium" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TitleTextAppearance.RobotoMedium" parent="TextAppearance.RobotoMedium">
        <item name="android:textColor">@color/color_121C2D</item>
        <item name="android:textSize">@dimen/sp_18</item>
    </style>


    <style name="App.PrimaryButtonText" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:padding">@dimen/dp_12</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextView.RegularTextAppearance" parent="TextAppearance.RobotoRegular">
        <item name="android:textColor">@color/color_121C2D</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="TitleTextAppearance.RobotoRegular" parent="TextAppearance.RobotoRegular">
        <item name="android:textColor">@color/color_121C2D</item>
        <item name="android:textSize">@dimen/sp_18</item>
    </style>

    <style name="TextView.TermsNConditions" parent="TextAppearance.RobotoRegular">
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:textColor">@color/color_121C2D</item>
    </style>

    <style name="TextAppearance.ResultTitle" parent="TextAppearance.RobotoMedium">
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textColor">@color/color_839BB1</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>